      "PropertyRequirements": {
        "Members": {
          "MinCount": 0
        }
      }
    },
    "Filesystem":{
      "PropertyRequirements": {
        "ExportedShares": {
          "ReadRequirement": "IfImplemented",
          "WriteRequirement": "Mandatory"
        },
        "ImportedShares": {
          "Purpose": "Require the Imported Shares structure to be complete and Create / Delete if implemented.",
          "ReadRequirement": "IfImplemented",
          "WriteRequirement": "Mandatory",
          "PropertyRequirements": {
            "ImportedShare": {},
            "FileSharePath": {}
          }
        }
      }
    }
  }
